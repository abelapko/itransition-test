<?xml version="1.0" ?>
<releset name="App coding standard">
    <arg value="p"/>
    <arg value="s"/>
    <arg name="colors"/>
    <arg name="cache" value="var/.phpcs.json"/>
    <arg name="extensions" value="php"/>

    <rule ref="PSR12"/>
    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
    </rule>

    <file>cases</file>
    <file>config</file>
    <file>commands</file>
    <file>dto</file>
    <file>entities</file>
    <file>events</file>
    <file>exceptions</file>
    <file>listeners</file>
    <file>migrations</file>
    <file>models</file>
    <file>services</file>
    <file>web</file>

    <exclude-pattern>config/__autocomplete.php</exclude-pattern>

</releset>